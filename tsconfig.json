{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "lib": [
        "ESNext",
        "DOM"
      ],
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "sourceMap": true,
      "outDir": "dist",
      "jsx": "preserve",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "isolatedModules": true,
      "noImplicitAny": true,
      "disableSizeLimit": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ]
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "tsc-alias": {
      "resolveFullPaths": true,
      "verbose": false
    }
  }